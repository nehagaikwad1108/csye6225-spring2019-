{
   "AWSTemplateFormatVersion" : "2010-09-09",
   "Parameters" : {
        "IAMStackName": {
            "Type": "String",
            "Description" : "Please enter string for iam stack name"
         } ,
	"BucketName": {
            "Type": "String",
            "Description" : "Please enter string for code deploy bucket name"
         },
	"AccountId": {
            "Type": "String",
            "Description" : "Account ID of the aws cli user"
         },
	"Region": {
            "Type": "String",
            "Description" : "Region of the aws cli user"
         }
   },
   "Resources" : {
       "CircleCIEC2Policy": {  
           "Type" : "AWS::IAM::ManagedPolicy",
           "Properties" : {
               "ManagedPolicyName" : "circleci-ec2-ami",
               "PolicyDocument" : {
                   "Version" : "2012-10-17",
                   "Statement": [ {
                       "Effect"   : "Allow",
                       "Action"   : [
		           "ec2:AttachVolume",
		           "ec2:AuthorizeSecurityGroupIngress",
		           "ec2:CopyImage",
		           "ec2:CreateImage",
	                   "ec2:CreateKeypair",
                           "ec2:CreateSecurityGroup",
	                   "ec2:CreateSnapshot",
	                   "ec2:CreateTags",
	                   "ec2:CreateVolume",
	                   "ec2:DeleteKeyPair",
		           "ec2:DeleteSecurityGroup",
		           "ec2:DeleteSnapshot",
		           "ec2:DeleteVolume",
		           "ec2:DeregisterImage",
	                   "ec2:DescribeImageAttribute",
		           "ec2:DescribeImages",
		           "ec2:DescribeInstances",
		           "ec2:DescribeInstanceStatus",
		           "ec2:DescribeRegions",
		           "ec2:DescribeSecurityGroups",
		           "ec2:DescribeSnapshots",
		           "ec2:DescribeSubnets",
		           "ec2:DescribeTags",
		           "ec2:DescribeVolumes",
		           "ec2:DetachVolume",
		           "ec2:GetPasswordData",
		           "ec2:ModifyImageAttribute",
		           "ec2:ModifyInstanceAttribute",
		           "ec2:ModifySnapshotAttribute",
		           "ec2:RegisterImage",
		           "ec2:RunInstances",
		           "ec2:StopInstances",
	                   "ec2:TerminateInstances"
                       ],
                       "Resource" : "*"
                   } ]
               },
	       "Users": ["circleci"]
           }	
       },
       "CircleCILambdaPolicy":{
           "Type" : "AWS::IAM::ManagedPolicy",
           "Properties" : {
               "ManagedPolicyName" : "CircleCI-Lambda-Policy",
	       "PolicyDocument":{
	           "Version": "2012-10-17",
                   "Statement": [
                       {
                           "Sid": "DevelopFunctions",
                           "Effect": "Allow", 
                           "Action": [
                               "lambda:AddPermission",
                               "lambda:PutFunctionConcurrency",
			       "lambda:UpdateFunctionCode"
                           ],
                           "Resource": {"Fn::Sub" : "arn:aws:lambda:${Region}:${AccountId}:function:*"}
                       }]       
	       },
	       "Users": ["circleci"]
	   }    
       },
       "CodeDeployEC2S3Policy": {
           "Type" : "AWS::IAM::ManagedPolicy",
           "Properties" : {
               "ManagedPolicyName" : "CodeDeploy-EC2-S3",
               "PolicyDocument" : {
                   "Version" : "2012-10-17",
                   "Statement": [ {
                       "Effect"   : "Allow",
                       "Action"   : [
                           "s3:Get*",
			   "s3:List*"
		       ],
	               "Resource" : {"Fn::Join" : [ "", [ "arn:aws:s3:::code-deploy.csye6225-spring2019-" , {"Ref" : "BucketName" }, ".me/*"]]}
		   } ]
	       }
           }
       },	   
       "CircleCIUploadToS3Policy": {
           "Type" : "AWS::IAM::ManagedPolicy",
           "Properties" : {
               "ManagedPolicyName" : "CircleCI-Upload-To-S3",
               "PolicyDocument" : {
                   "Version" : "2012-10-17",
                   "Statement": [ {
                       "Effect"   : "Allow",
                       "Action"   : [
                           "s3:PutObject"
		       ],
	               "Resource" : {"Fn::Join" : [ "", [ "arn:aws:s3:::code-deploy.csye6225-spring2019-" , {"Ref" : "BucketName" }, ".me/*"]]} 
		   } ]
	       },
	       "Users": ["circleci"]
           }
       },	   
       "EC2UploadToS3Policy": {
           "Type" : "AWS::IAM::ManagedPolicy",
           "Properties" : {
               "ManagedPolicyName" : "EC2-Upload-To-S3",
               "PolicyDocument" : {
                   "Version" : "2012-10-17",
                   "Statement": [ {
                       "Effect"   : "Allow",
                       "Action"   : [
                           "s3:PutObject",
			   "s3:Get*",
                           "s3:DeleteObject"
		       ],
	               "Resource" : { "Fn::Sub" : "arn:aws:s3:::csye6225-spring2019-${BucketName}.me.csye6225.com/*"}
		   } ]
	       }
           }
       },
       "EC2PublishSNSPolicy":{
           "Type" : "AWS::IAM::ManagedPolicy",
           "Properties" : {
               "ManagedPolicyName" : "EC2-Publish-SNS",
               "PolicyDocument" : {
                   "Version" : "2012-10-17",
                   "Statement": [ {
                       "Effect"   : "Allow",
                       "Action"   : [
                            "SNS:Publish"
                       ],
                       "Resource" : {"Fn::Sub" : "arn:aws:sns:${Region}:${AccountId}:password_reset"}
                   } ]
               }
           }	       
       },       
       "LambdaSESPolicy":{
           "Type" : "AWS::IAM::ManagedPolicy",
           "Properties" : {
               "ManagedPolicyName" : "Lambda-Execution-Policy",
               "PolicyDocument" : {
                   "Version" : "2012-10-17",
                   "Statement": [ {
                       "Effect"   : "Allow",
                       "Action"   : [
                     	   "ses:SendEmail"  	          
                       ],
                       "Resource": {"Fn::Sub" : "arn:aws:ses:${Region}:${AccountId}:identity/csye6225-spring2019-${BucketName}.me"} 
                   },
		   {
		       "Effect"  : "Allow",
	               "Action"  : [
		           "cloudwatch:*",
                           "dynamodb:*",
                           "lambda:*",
                           "logs:*",
                           "s3:*",
			   "xray:PutTelemetryRecords",
                	   "xray:PutTraceSegments"			   
		       ],
	               "Resource" : "*"	       
		   }]
               }
           }	       
       },       
       "CirlceCICodeDeployPolicy": {
           "Type" : "AWS::IAM::ManagedPolicy",
           "Properties" : {
               "ManagedPolicyName" : "CirlceCI-Code-Deploy",
               "PolicyDocument" : {
                   "Version" : "2012-10-17",
                   "Statement": [ 
		       {
      			   "Effect": "Allow",
		           "Action": [
		               "codedeploy:RegisterApplicationRevision",
		               "codedeploy:GetApplicationRevision"
		           ],
     			   "Resource": [
				{"Fn::Sub": "arn:aws:codedeploy:${Region}:${AccountId}:application:csye6225-webapp" }
      			   ]
    		       },
    	       	       {
		           "Effect": "Allow",
		           "Action": [
			        "codedeploy:CreateDeployment",
			        "codedeploy:GetDeployment"
		           ],
		           "Resource": [
        			"*"
		     	   ]
    		       },
    		       {
      			   "Effect": "Allow",
      			   "Action": [
		                "codedeploy:GetDeploymentConfig"
      			   ],
		           "Resource": [
				{"Fn::Sub": "arn:aws:codedeploy:${Region}:${AccountId}:deploymentconfig:CodeDeployDefault.OneAtATime" },
				{"Fn::Sub": "arn:aws:codedeploy:${Region}:${AccountId}:deploymentconfig:CodeDeployDefault.HalfAtATime" },
				{"Fn::Sub": "arn:aws:codedeploy:${Region}:${AccountId}:deploymentconfig:CodeDeployDefault.AllAtOnce" }
		           ]
   		       }
		   ]
	       },
	       "Users": ["circleci"]
           }
       },
       "CodeDeployEC2ServiceRole": {
	   "Type": "AWS::IAM::Role",
           "Properties": {
               "AssumeRolePolicyDocument": {
                   "Version" : "2012-10-17",
                   "Statement": [ {
                       "Effect": "Allow",
                       "Principal": {
                           "Service": [ "ec2.amazonaws.com" ]
                       },
                       "Action": [ "sts:AssumeRole" ]
                   } ]
	       },	   
	       "ManagedPolicyArns": [ 
		       { "Ref" : "CodeDeployEC2S3Policy" },
		       {"Ref" : "EC2UploadToS3Policy"}, 
		       "arn:aws:iam::aws:policy/CloudWatchAgentServerPolicy" , 
		       {"Ref" : "EC2PublishSNSPolicy" }
	       ],
    	       "RoleName": "CodeDeployEC2ServiceRole"	       
           }       
       },       
       "CodeDeployServiceRole": {
	   "Type": "AWS::IAM::Role",
           "Properties": {
               "AssumeRolePolicyDocument": {
                   "Version" : "2012-10-17",
                   "Statement": [ {
                       "Effect": "Allow",
                       "Principal": {
                           "Service": [ "codedeploy.amazonaws.com" ]
                       },
                       "Action": [ "sts:AssumeRole" ]
                   } ]
	       },
	       "ManagedPolicyArns" : ["arn:aws:iam::aws:policy/service-role/AWSCodeDeployRole"],
    	       "RoleName": "CodeDeployServiceRole"	       
           }       
       },
       "LambdaServiceRole": {
           "Type": "AWS::IAM::Role",
           "Properties": {
               "AssumeRolePolicyDocument": {
                   "Version" : "2012-10-17",
                   "Statement": [ {
                       "Effect": "Allow",
                       "Principal": {
                           "Service": [ "lambda.amazonaws.com" ]
                       },
                       "Action": [ "sts:AssumeRole" ]
                   } ]
               },
               "ManagedPolicyArns":[ {"Ref": "LambdaSESPolicy" } ],
               "RoleName": "LambdaServiceRole"
           }
       },
       "EC2InstanceProfile":{
           "Type": "AWS::IAM::InstanceProfile",
           "Properties": {
               "Roles": [ {"Ref": "CodeDeployEC2ServiceRole"} ],
               "InstanceProfileName": "EC2InstanceProfile"
           }       
       }       
   },
   "Outputs" : 
   {
   	"CodeDeployServiceRole" : 
   	{
    		"Description" : "CodeDeployServiceRole",
    		"Value" : { "Fn::GetAtt": [ "CodeDeployServiceRole" , "Arn" ] },
    		"Export" : 
		{
      			"Name" : "CodeDeployServiceRole" 
		}
  	 },
   	"LambdaServiceRole" : 
   	{
    		"Description" : "LambdaServiceRole",
    		"Value" : { "Fn::GetAtt": [ "LambdaServiceRole" , "Arn" ] },
    		"Export" : 
		{
      			"Name" : "LambdaServiceRole" 
		}
  	 },
	 "EC2InstanceProfile" : 
	 {
		 "Description" : "Instance Profile to be attached to EC2 Instance",
		 "Value" : { "Ref" : "EC2InstanceProfile" },
		 "Export" : { "Name" : "EC2InstanceProfile" }
	 } 
   } 
}   
